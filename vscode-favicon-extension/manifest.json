{
  "manifest_version": 3,
  "name": "VS Code Server Project Favicons",
  "version": "4.8.0",
  "description": "Project favicons with terminal indicator, Claude notifications, and clipboard image paste",
  "permissions": ["tabs", "scripting", "clipboardRead"],
  "host_permissions": [
    "https://vs.noreika.lt/*",
    "https://favicon-api.noreika.lt/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none'"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "VS Code Server Favicons"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://vs.noreika.lt/*"
      ],
      "js": ["content-project-favicon.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
