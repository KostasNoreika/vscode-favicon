{
    "name": "vscode-favicon",
    "version": "1.0.0",
    "description": "VS Code Favicon Service with secure path validation",
    "main": "index.js",
    "scripts": {
        "dev": "concurrently -n service,api -c blue,green \"npm run dev:service\" \"npm run dev:api\"",
        "dev:service": "nodemon --watch vscode-favicon-service --watch lib vscode-favicon-service/server.js",
        "dev:api": "nodemon --watch vscode-favicon-api --watch lib vscode-favicon-api/server.js",
        "start": "concurrently \"node vscode-favicon-service/server.js\" \"node vscode-favicon-api/server.js\"",
        "start:service": "node vscode-favicon-service/server.js",
        "start:api": "node vscode-favicon-api/server.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:ci": "jest --ci --coverage --maxWorkers=2 --reporters=default --reporters=jest-junit",
        "test:unit": "jest tests/unit",
        "test:integration": "jest tests/integration",
        "test:security": "jest tests/unit/path-validator.test.js",
        "test:verbose": "jest --verbose",
        "test:silent": "jest --silent",
        "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
        "coverage:open": "open coverage/lcov-report/index.html",
        "coverage:check": "jest --coverage --coverageThreshold='{\"global\":{\"branches\":70,\"functions\":70,\"lines\":70,\"statements\":70}}'",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "quality": "npm run format:check && npm run lint && npm run test:coverage",
        "benchmark": "node tests/performance-benchmark.js",
        "benchmark:concurrent": "node tests/concurrent-benchmark.js",
        "prepare": "husky"
    },
    "keywords": [
        "vscode",
        "favicon",
        "security",
        "testing",
        "jest"
    ],
    "author": "Kostas Noreika",
    "license": "MIT",
    "devDependencies": {
        "@types/jest": "^30.0.0",
        "concurrently": "^9.2.1",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-security": "^2.1.0",
        "express": "^5.2.1",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "jest-junit": "^16.0.0",
        "lint-staged": "^16.2.7",
        "nodemon": "^3.1.11",
        "prettier": "^3.2.5",
        "supertest": "^6.3.4"
    },
    "dependencies": {
        "compression": "^1.8.1",
        "dotenv": "^17.2.3",
        "express-validator": "^7.3.1",
        "pino": "^10.1.0",
        "pino-pretty": "^13.1.3"
    },
    "lint-staged": {
        "*.js": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,md}": [
            "prettier --write"
        ]
    }
}
